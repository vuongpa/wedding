<!-- Edit Invitation Modal -->
<div class="modal fade" id="editInvitationModal" tabindex="-1" aria-labelledby="editInvitationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

<!-- JavaScript for Edit Modal -->
<script>
function editInvitation(id, title, from) {
    // Set form action URL
    document.getElementById('editInvitationForm').action = '/admin/invitations/' + id;
    
    // Populate form fields - escape HTML entities  
    document.getElementById('edit-invitation-id').value = id;
    document.getElementById('edit-title').value = decodeHtmlEntities(title);
    document.getElementById('edit-from').value = decodeHtmlEntities(from);
}

// Function to decode HTML entities
function decodeHtmlEntities(text) {
    var textarea = document.createElement("textarea");
    textarea.innerHTML = text;
    return textarea.value;
}

// Add form submission feedback
document.addEventListener('DOMContentLoaded', function() {
    const editForm = document.getElementById('editInvitationForm');
    if (editForm) {
        editForm.addEventListener('submit', function() {
            const submitBtn = document.querySelector('#editInvitationModal .btn-wedding');
            const originalText = submitBtn.innerHTML;
            
            // Show loading state
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Đang lưu...';
            submitBtn.disabled = true;
            
            // Reset after 3 seconds (fallback in case redirect is slow)
            setTimeout(function() {
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }, 3000);
        });
    }
});

// Add Bootstrap warning button styles
const style = document.createElement('style');
style.textContent = `
    .btn-warning {
        background: linear-gradient(45deg, #ffc107, #ffca2c);
        border: none;
        color: #212529;
        box-shadow: 0 3px 10px rgba(255, 193, 7, 0.3);
        font-weight: 600;
    }
    
    .btn-warning:hover {
        background: linear-gradient(45deg, #ffca2c, #ffc107);
        transform: translateY(-1px);
        box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
        color: #212529;
    }
    
    .text-info {
        color: #0dcaf0 !important;
    }
`;
document.head.appendChild(style);
</script>


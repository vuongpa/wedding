<script>
// Falling Hearts Animation
function createFallingHeart() {
	const heart = document.createElement('div');
	heart.className = 'falling-heart';

	// Random starting position
	const startX = Math.random() * window.innerWidth;
	heart.style.left = `${startX}px`;

	// Random size between 8px and 16px
	const size = Math.random() * 8 + 8;
	heart.style.width = `${size}px`;
	heart.style.height = `${size}px`;

	// Set random movement pattern
	const translateX = (Math.random() - 0.5) * 100;
	const rotate = Math.random() * 360;
	heart.style.setProperty('--translate-x', translateX);
	heart.style.setProperty('--rotate', rotate);

	// Random animation duration between 5s and 10s
	const duration = Math.random() * 5 + 5;
	heart.style.animationDuration = `${duration}s`;

	// Random delay
	heart.style.animationDelay = `${Math.random() * 2}s`;

	// Random opacity
	heart.style.opacity = Math.random() * 0.4 + 0.3;

	document.querySelector('.hearts-container').appendChild(heart);

	// Remove heart after animation
	setTimeout(() => {
		if (heart.parentNode) {
			heart.remove();
		}
	}, (duration + 2) * 1000);
}

// Create hearts periodically
setInterval(createFallingHeart, 300);

document.addEventListener('DOMContentLoaded', function() {
	console.log('Document ready, initializing countdown...');
	console.log('simplyCountdown function available:', typeof simplyCountdown);
	
	var d = new Date(2025, 5, 14); // Note: month is 0-based, so 5 represents June
	console.log('Wedding date:', d);

	// Initialize countdown with proper error handling
	if (typeof simplyCountdown === 'function') {
		console.log('Initializing countdown...');
		try {
			simplyCountdown('.simply-countdown-one', {
				year: d.getFullYear(),
				month: d.getMonth() + 1,
				day: d.getDate(),
				hours: 10,
				minutes: 30,
				seconds: 0,
				words: {
					days: 'Ngày',
					hours: 'Giờ',
					minutes: 'Phút',
					seconds: 'Giây'
				},
				plural: false,
				inline: false,
				enableUtc: false,
				onEnd: function() {
					console.log('Countdown ended');
				},
				refresh: 1000,
				inlineClass: 'simply-countdown-inline',
				sectionClass: 'simply-section',
				amountClass: 'simply-amount',
				wordClass: 'simply-word'
			});
			console.log('Countdown initialized successfully');
		} catch (error) {
			console.error('Error initializing countdown:', error);
		}
	} else {
		console.error('simplyCountdown function not found. Please check if simplyCountdown.js is loaded.');
		// Retry after a short delay in case scripts are still loading
		setTimeout(function() {
			if (typeof simplyCountdown === 'function') {
				console.log('Retrying countdown initialization...');
				simplyCountdown('.simply-countdown-one', {
					year: d.getFullYear(),
					month: d.getMonth() + 1,
					day: d.getDate(),
					hours: 10,
					minutes: 30,
					seconds: 0,
					words: {
						days: 'Ngày',
						hours: 'Giờ',
						minutes: 'Phút',
						seconds: 'Giây'
					},
					plural: false,
					inline: false,
					enableUtc: false
				});
			}
		}, 1000);
	}
});
</script>

<style>
/* Falling Hearts Animation */
.hearts-container {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	pointer-events: none;
	z-index: 1000;
	overflow: hidden;
}

.falling-heart {
	position: absolute;
	width: 12px;
	height: 12px;
	background: #ff0000;
	transform: rotate(45deg);
	animation: falling linear infinite;
	opacity: 0.6;
}

.falling-heart::before,
.falling-heart::after {
	content: '';
	position: absolute;
	width: 100%;
	height: 100%;
	background: inherit;
	border-radius: 50%;
}

.falling-heart::before {
	left: -50%;
}

.falling-heart::after {
	top: -50%;
}

@keyframes falling {
	0% {
		transform: translate(0, -10vh) rotate(45deg) scale(0);
		opacity: 0.8;
	}
	10% {
		opacity: 1;
	}
	90% {
		opacity: 0.5;
	}
	100% {
		transform: translate(calc(var(--translate-x) * 1px), 100vh) rotate(calc(45deg + var(--rotate) * 1deg)) scale(1);
		opacity: 0;
	}
}

/* Title glow animation */
@keyframes titleGlow {
	0%, 100% {
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5), 0 0 20px rgba(255, 255, 255, 0.3);
	}
	50% {
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5), 0 0 30px rgba(255, 255, 255, 0.6);
	}
}

/* Subtitle float animation */
@keyframes subtitleFloat {
	0%, 100% {
		transform: translateY(0);
	}
	50% {
		transform: translateY(-5px);
	}
}

/* Heart beat animation */
@keyframes heartBeat {
	0%, 100% {
		transform: scale(1);
		color: #ff0000;
	}
	50% {
		transform: scale(1.2);
		color: #ff3333;
	}
}

/* Floating images */
.floating-image {
	animation: float 3s ease-in-out infinite;
}

@keyframes float {
	0%, 100% {
		transform: translateY(0);
	}
	50% {
		transform: translateY(-10px);
	}
}

/* Enhanced animations for existing elements */
.animate-box {
	transition: all 0.3s ease-in-out;
}

.animate-box:hover {
	transform: translateY(-5px);
}

/* Gallery hover effects */
#fh5co-gallery-list li {
	transition: all 0.3s ease-in-out;
}

#fh5co-gallery-list li:hover {
	transform: scale(1.05);
	box-shadow: 0 10px 30px rgba(0,0,0,0.3);
}
</style>
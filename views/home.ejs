<script>
document.addEventListener('DOMContentLoaded', function() {
	console.log('Document ready, initializing countdown...');
	console.log('simplyCountdown function available:', typeof simplyCountdown);
	
	var d = new Date(2025, 5, 14); // Note: month is 0-based, so 5 represents June
	console.log('Wedding date:', d);

	// Initialize countdown with proper error handling
	if (typeof simplyCountdown === 'function') {
		console.log('Initializing countdown...');
		try {
			simplyCountdown('.simply-countdown-one', {
				year: d.getFullYear(),
				month: d.getMonth() + 1,
				day: d.getDate(),
				hours: 10,
				minutes: 30,
				seconds: 0,
				words: {
					days: 'Ngày',
					hours: 'Giờ',
					minutes: 'Phút',
					seconds: 'Giây'
				},
				plural: false,
				inline: false,
				enableUtc: false,
				onEnd: function() {
					console.log('Countdown ended');
				},
				refresh: 1000,
				inlineClass: 'simply-countdown-inline',
				sectionClass: 'simply-section',
				amountClass: 'simply-amount',
				wordClass: 'simply-word'
			});
			console.log('Countdown initialized successfully');
		} catch (error) {
			console.error('Error initializing countdown:', error);
		}
	} else {
		console.error('simplyCountdown function not found. Please check if simplyCountdown.js is loaded.');
		// Retry after a short delay in case scripts are still loading
		setTimeout(function() {
			if (typeof simplyCountdown === 'function') {
				console.log('Retrying countdown initialization...');
				simplyCountdown('.simply-countdown-one', {
					year: d.getFullYear(),
					month: d.getMonth() + 1,
					day: d.getDate(),
					hours: 10,
					minutes: 30,
					seconds: 0,
					words: {
						days: 'Ngày',
						hours: 'Giờ',
						minutes: 'Phút',
						seconds: 'Giây'
					},
					plural: false,
					inline: false,
					enableUtc: false
				});
			}
		}, 1000);
	}
});
</script>
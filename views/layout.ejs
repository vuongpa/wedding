	<link rel="stylesheet" href="/css/magnific-popup.css">
	<!-- Owl Carousel  -->
	<link rel="stylesheet" href="/css/owl.carousel.min.css">
	<link rel="stylesheet" href="/css/owl.theme.default.min.css">
	<!-- Theme style  -->
	<link rel="stylesheet" href="/css/style.css">

	<!-- Modernizr JS -->
	<script src="/js/modernizr-2.6.2.min.js"></script>

	<style>
		:root {
			--primary-color: #8B1F2B;
			--primary-color-rgb: 139, 31, 43;
			--primary-color-light: rgba(139, 31, 43, 0.8);
			--primary-color-lighter: rgba(139, 31, 43, 0.5);
		}

		body {
			font-family: 'Quicksand', sans-serif;
			font-weight: 400;
		}

		h1, h2, h3, .fh5co-heading h2 {
			font-family: 'Dancing Script', cursive;
			font-weight: 700;
		}

		#fh5co-logo {
			font-family: 'Dancing Script', cursive;
			font-weight: 700;
			font-size: 24px;
		}

		.timeline-title, .btn, .form-control {
			font-family: 'Montserrat', sans-serif;
		}

		.fh5co-nav {
			font-family: 'Montserrat', sans-serif;
			font-weight: 500;
		}

		.counter-label {
			font-family: 'Quicksand', sans-serif;
			font-weight: 500;
		}

		.timeline-body p {
			font-family: 'Quicksand', sans-serif;
			font-weight: 400;
		}

		#fh5co-header .display-tc h1 {
			font-family: 'Dancing Script', cursive;
			font-weight: 700;
			font-size: 70px;
			text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
			margin-bottom: 30px;
		}

		#fh5co-header .display-tc h2 {
			font-family: 'Quicksand', sans-serif;
			font-weight: 500;
			font-size: 30px;
			text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4);
			margin-bottom: 40px;
		}

		#fh5co-header.fh5co-cover {
			background-size: cover !important;
			background-position: center 25% !important;
			background-repeat: no-repeat !important;
		}

		/* Fix countdown styling */
		.simply-countdown {
			margin-bottom: 2em;
			display: flex;
			justify-content: center;
			gap: 20px;
		}

		.simply-countdown>.simply-section {
			width: 100px;
			height: 100px;
			display: flex;
			align-items: center;
			justify-content: center;
			background: var(--primary-color-light);
			border-radius: 50%;
			animation: pulse 1s ease infinite;
		}

		.simply-countdown>.simply-section>div {
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			height: 100%;
			width: 100%;
			padding: 10px;
		}

		.simply-countdown>.simply-section .simply-amount {
			font-size: 35px;
			font-weight: 700;
			line-height: 1;
			margin-bottom: 5px;
			color: white;
		}

		.simply-countdown>.simply-section .simply-word {
			font-size: 12px;
			font-weight: 500;
			text-transform: uppercase;
			color: rgba(255, 255, 255, 0.9);
			margin-top: 3px;
		}

		/* Update other elements with new color */
		.btn {
			background: var(--primary-color) !important;
			color: #fff !important;
		}

		.btn:hover {
			background: var(--primary-color-light) !important;
		}

		.heart i {
			color: var(--primary-color) !important;
		}

		.timeline-badge {
			background: var(--primary-color) !important;
		}

		.event-wrap {
			border-color: var(--primary-color-lighter) !important;
		}

		.fh5co-social-icons a:hover {
			color: var(--primary-color) !important;
		}

		.couple-wrap .heart {
			color: var(--primary-color);
		}

		.section-title {
			color: var(--primary-color);
		}

		a {
			color: var(--primary-color);
		}

		a:hover {
			color: var(--primary-color-light);
		}

		/* QR Code Section Styles */
		.qr-wrap {
			background: #fff;
			padding: 30px;
			border-radius: 20px;
			box-shadow: 0 10px 30px rgba(var(--primary-color-rgb), 0.1);
			margin-bottom: 30px;
			transition: all 0.3s ease;
			border: 2px solid rgba(var(--primary-color-rgb), 0.1);
		}

		.qr-wrap:hover {
			transform: translateY(-5px);
			box-shadow: 0 15px 35px rgba(var(--primary-color-rgb), 0.2);
			border-color: rgba(var(--primary-color-rgb), 0.2);
		}

		.qr-wrap h3 {
			color: var(--primary-color);
			font-size: 28px;
			margin-bottom: 20px;
		}

		.qr-image {
			padding: 20px;
			background: #fff;
			border-radius: 15px;
			margin: 0 auto 20px;
			max-width: 250px;
			border: 2px solid rgba(var(--primary-color-rgb), 0.1);
		}

		.qr-image img {
			width: 100%;
			height: auto;
		}

		.bank-info {
			color: #666;
			font-size: 16px;
			line-height: 1.8;
			margin: 0;
			padding: 15px;
			background: rgba(var(--primary-color-rgb), 0.05);
			border-radius: 10px;
		}

		.bank-info strong {
			color: var(--primary-color);
			font-weight: 600;
		}

		@media screen and (max-width: 768px) {
			#fh5co-header.fh5co-cover {
				background-size: cover !important;
			}
		}

		/* Responsive styles */
		@media screen and (max-width: 992px) {
			#fh5co-header .display-tc h1 {
				font-size: 50px;
				margin-bottom: 20px;
			}

			#fh5co-header .display-tc h2 {
				font-size: 24px;
				margin-bottom: 30px;
			}

			.simply-countdown {
				gap: 15px;
			}

			.simply-countdown>.simply-section {
				width: 80px;
				height: 80px;
			}

			.simply-countdown>.simply-section .simply-amount {
				font-size: 30px;
			}

			.simply-countdown>.simply-section .simply-word {
				font-size: 11px;
			}
		}

		@media screen and (max-width: 768px) {
			#fh5co-header .display-tc h1 {
				font-size: 40px;
				margin-bottom: 15px;
			}

			#fh5co-header .display-tc h2 {
				font-size: 20px;
				margin-bottom: 25px;
			}

			#fh5co-header.fh5co-cover {
				height: 100vh !important;
				background-position: center center !important;
			}

			#fh5co-header .display-tc {
				display: flex;
				align-items: center;
				justify-content: center;
				height: 100vh;
			}

			.simply-countdown {
				gap: 10px;
			}

			.simply-countdown>.simply-section {
				width: 65px;
				height: 65px;
			}

			.simply-countdown>.simply-section .simply-amount {
				font-size: 24px;
				margin-bottom: 2px;
			}

			.simply-countdown>.simply-section .simply-word {
				font-size: 10px;
			}

			.qr-wrap {
				padding: 20px;
			}

			.qr-wrap h3 {
				font-size: 24px;
			}

			.qr-image {
				max-width: 200px;
			}

			.bank-info {
				font-size: 14px;
			}
		}

		@media screen and (max-width: 480px) {
			#fh5co-header .display-tc h1 {
				font-size: 32px;
				margin-bottom: 10px;
			}

			#fh5co-header .display-tc h2 {
				font-size: 18px;
				margin-bottom: 20px;
			}

			.simply-countdown {
				gap: 8px;
			}

			.simply-countdown>.simply-section {
				width: 60px;
				height: 60px;
			}

			.simply-countdown>.simply-section .simply-amount {
				font-size: 20px;
				margin-bottom: 1px;
			}

			.simply-countdown>.simply-section .simply-word {
				font-size: 9px;
			}
		}
	</style>
</head>

